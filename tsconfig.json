{
  "compilerOptions": {
    // "allowJs": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "importsNotUsedAsValues": "preserve",
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ]
  },
  "include": ["**.ts", "../vite.config.d.ts", "**/**/*.ts"],
  "exclude": ["node_modules", "packages", "test", "tests", "components/account-settings"]
}
