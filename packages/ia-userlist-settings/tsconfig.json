{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "importsNotUsedAsValues": "remove",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
  },
  "include": ["**/*.ts"]
}
