{
  "name": "@internetarchive/ia-userlist-settings",
  "description": "Typescript component to add/edit user lists",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/internetarchive/iaux.git"
  },
  "license": "AGPL-3.0-only",
  "author": "Internet Archive",
  "version": "1.1.2-webdev-7558.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "prepare": "rimraf dist && tsc",
    "build": "tsc",
    "lint": "eslint --ext .ts,.html . && prettier \"**/*.ts\" --check",
    "format": "eslint --ext .ts,.html . --fix && prettier \"**/*.ts\" --write",
    "circular": "madge --circular --extensions ts .",
    "test": "tsc && npm run format && npm run lint && npm run circular && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "publish:alpha": "npm run test && npm run prepare && npm version prerelease --preid alpha --no-git-tag-version && npm publish --tag alpha"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@internetarchive/modal-manager": "^2.0.1",
    "@internetarchive/result-type": "^0.0.1",
    "@internetarchive/search-service": "^2.4.1-webdev-7558.3",
    "@internetarchive/user-service": "^1.0.0",
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.20.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-lit-a11y": "^4.1.4",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-wc": "^2.2.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "nx": "20.8.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "ts-lit-plugin": "^2.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
