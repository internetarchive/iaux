{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "paths": {
      // workaround for: https://github.com/vitest-dev/vitest/issues/4567
      "rollup/parseAst": [
        "./node_modules/rollup/dist/parseAst"
    ]
}
  },
  "include": ["**/*.ts"]
}
